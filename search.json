---
permalink: /search.json
---

[
{% for post in site.posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": {{ post.url | relative_url | jsonify }},
    "date": {{ post.date | date: "%B %d, %Y" | jsonify }},
    "author": {{ post.author | default: "" | jsonify }},
    "adoptee_location": {{ post.adoptee_location | default: "" | jsonify }},
    "category": {{ post.category | default: "" | jsonify }},
    "excerpt": {{ post.content | markdownify | strip_html | strip_newlines | truncate: 180 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]


<script>
(() => {
  const carousel = document.getElementById("homeCarousel");
  if (!carousel) return;

  const track = carousel.querySelector(".home-carousel-track");
  const slides = carousel.querySelectorAll(".carousel-card");
  if (!track || slides.length <= 1) return;

  let i = 0;

  function goTo(idx){
    i = idx;
    track.style.transform = `translateX(-${i * 100}%)`;
  }

  setInterval(() => {
    i = (i + 1) % slides.length;
    goTo(i);
  }, 5000);
})();
</script>
